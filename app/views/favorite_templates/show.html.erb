<h1>
  Favorite #<%= @favorite.id %> details
</h1>

<a href="/favorites/<%= @favorite.id %>/edit">
  Edit favorite
</a>

<hr>

<dl>
  <dt>
    User
  </dt>
  <dd>
    <%= @favorite.user_id %>
  </dd>

  <dt>
    Company
  </dt>
  <dd>
    <%= @favorite.company_id %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@favorite.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@favorite.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_favorite/<%= @favorite.id %>">
  Delete favorite
</a>

<hr>

<a href="/favorites">
  Go back
</a>
